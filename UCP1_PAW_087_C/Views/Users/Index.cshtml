@model IEnumerable<UCP1_PAW_087_C.Models.Users>

@{
    ViewData["Title"] = "Data User";
}

<h1>Data User</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-success text-decoration-none">Tambah User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Nama")
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th>
                @Html.DisplayName("Password")
            </th>
            <th>
                @Html.DisplayName("Jabatan")
            </th>
            <th>
                @Html.DisplayName("Role")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPositionNavigation.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdRoleNavigation.RoleName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdUser" class="btn btn-sm btn-primary text-decoration-none">Edit</a>
                <a asp-action="Details" asp-route-id="@item.IdUser" class="btn btn-sm btn-secondary text-decoration-none">Detail</a>
                <a asp-action="Delete" asp-route-id="@item.IdUser" class="btn btn-sm btn-danger text-decoration-none">Hapus</a>
            </td>
        </tr>
}
    </tbody>
</table>
