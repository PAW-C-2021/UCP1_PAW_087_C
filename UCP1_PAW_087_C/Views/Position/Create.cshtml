@model UCP1_PAW_087_C.Models.Position

@{
    ViewData["Title"] = "Tambah Jabatan";
}

<h1>Tambah Jabatan</h1>

<h4>Jabatan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdPosition" class="control-label">ID Jabatan</label>
                <input asp-for="IdPosition" class="form-control" />
